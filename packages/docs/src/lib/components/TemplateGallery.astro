---
import { Card, Link } from "@dxdns/feflow"

const templates = [
	{
		title: "Landing Page",
		href: "/templates/landing-page"
	},
	{
		title: "Sign In",
		href: "/templates/sign-in"
	},
	{
		title: "Portfolio",
		href: "/templates/portfolio"
	}
]
---

<div style="max-width: 500px; margin: 0 auto;">
	{
		templates.map(({ title, href }) => (
			<Link href={href} target="_blank" key={href}>
				<Card style="overflow: hidden;">
					<h4 style="text-align: center;">{title}</h4>
					<iframe
						src={href}
						style="
						width: 500px;
						height: 400px;
						border: none;
						border-radius: 8px;
						pointer-events: none;
						overflow: hidden;
						"
						scrolling="no"
						loading="lazy"
					/>
				</Card>
			</Link>
		))
	}
</div>
